<Window x:Class="WalzExplorer.Windows.TextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:model="clr-namespace:WalzExplorer.Windows"
       
        Title="Text" Height="254" Width="437" ShowInTaskbar="False"   Loaded="Window_Loaded">

    <Grid  Background="#FF252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Button Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" Grid.Row="1"/>
        <Button Name="btnOK" Content="OK" HorizontalAlignment="Right" Margin="0,2,10,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click" Grid.Row="1"/>
        <TextBox Name="tbText" AcceptsReturn="True"  VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch"  Margin="10,10,10,3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Stretch" />

    </Grid>
</Window>
